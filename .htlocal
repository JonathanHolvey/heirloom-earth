RewriteEngine On
RewriteBase /heirloom-earth.com/

RewriteRule ^(.*)/$ $1 [R=301]

RewriteRule ^posts/(.+)$ post.php?p=$1 [NC,L]
RewriteRule ^categories/(.+)$ list.php?f=category&m=$1 [NC,L]
RewriteRule ^tags/(.+)$ list.php?f=tags&m=$1 [NC,L]
RewriteRule ^posts$ list.php [NC,L]
RewriteRule ^categories$ categories.php [NC,L]