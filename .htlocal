php_value date.timezone "Australia/Brisbane"

RewriteEngine On
RewriteBase /heirloom-earth.com/

RewriteRule ^(.*)/$ $1 [R=301]

RewriteRule ^$ pages/home.php [NC,L]
RewriteRule ^posts/(.+)$ pages/post.php?p=$1 [NC,L]
RewriteRule ^categories/(.+)$ pages/list.php?f=category&m=$1 [NC,L]
RewriteRule ^tags/(.+)$ pages/list.php?f=tags&m=$1 [NC,L]
RewriteRule ^posts$ pages/list.php [NC,L]
RewriteRule ^categories$ pages/categories.php [NC,L]
RewriteRule ^about$ pages/about.php [NC,L]
RewriteRule ^contact$ pages/contact.php [NC,L]